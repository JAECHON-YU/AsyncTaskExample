<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TedText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="TedText.Display" parent="@style/TedText">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black54</item>
    </style>

    <style name="TedText.Headline" parent="@style/TedText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>


    <style name="TedText.Title" parent="@style/TedText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="TedText.Subhead" parent="@style/TedText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="TedText.Body" parent="@style/TedText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="TedText.Caption" parent="@style/TedText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black54</item>
    </style>


</resources>